<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/recyclerView_order_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:scaleType="fitXY"
            app:shapeAppearanceOverlay="@style/roundImgViewpager" />

        <LinearLayout
            android:id="@+id/tvo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recyclerView_order_title"
                android:layout_width="match_parent"
                android:layout_height="16pt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="fill"
                android:paddingLeft="5pt"
                android:text="Adidas Shoe"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recyclerView_order_price"
                android:layout_width="match_parent"
                android:layout_height="16pt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="fill"
                android:paddingLeft="5pt"
                android:text="$100.00"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>