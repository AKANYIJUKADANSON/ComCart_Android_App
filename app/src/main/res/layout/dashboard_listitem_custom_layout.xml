<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="11dp"
    android:layout_margin="10dp"
    android:background="@drawable/dashboard_item_background">

    <ImageView
        android:id="@+id/recyc_imageview_dashboard"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:background="@color/lightGrey"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/splashbg"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="7dp" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@id/recyc_imageview_dashboard" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/borderColor"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="322dp"
        android:layout_below="@id/view_divider">

        <TextView
            android:id="@+id/tv_dashboard_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_dashboard_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$200.0"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>